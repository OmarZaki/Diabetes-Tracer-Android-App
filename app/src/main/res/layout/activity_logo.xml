<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0099cc"
    tools:context="com.example.omar.diabetestracerapp.ActivityLogo">

    <ImageView
        android:id="@+id/diabetesTracerIcon"
        android:layout_width="@dimen/logo_main"
        android:layout_height="@dimen/logo_main"
        android:src="@mipmap/ic_launcher"
        android:layout_marginTop="109dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Diabetes Tracer App"
        android:id="@+id/tv_diabetesIconTitle"
        android:layout_below="@+id/diabetesTracerIcon"
        android:layout_centerHorizontal="true" />

    <ProgressBar
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/pb_waiting"
        android:layout_below="@+id/tv_diabetesIconTitle"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
